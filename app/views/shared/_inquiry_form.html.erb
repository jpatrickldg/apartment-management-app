<div class="max-w-xl m-auto bg-gray-100 shadow-lg p-5 rounded-md" id="inquire">
  <h1 class="text-center text-2xl font-bold mb-6 uppercase text-blue-500">Inquire Now</h1>

  <%= form_with model: @inquiry, data: {turbo: false}, url: inquiries_path, method: :post do |f| %>
    
    <div class="flex flex-col gap-2 justify-center">
      <div>
        <div class="flex items-center gap-2">
          <%= f.label :email, class: 'block font-medium text-gray-900 text-left' %>
        </div>
        <%= f.email_field :email, class: "bg-gray-50 border text-gray-900 border-gray-300 p-1.5 focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 rounded-md", required: true %>
      </div>

      <div>
        <div class="flex items-center gap-2">
          <%= f.label :first_name, class: 'block font-medium text-gray-900 text-left capitalize' %>
        </div>
        <%= f.text_field :first_name, class: "bg-gray-50 border text-gray-900 border-gray-300 p-1.5 focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 rounded-md", required: true %>
      </div>

      <div>
        <div class="flex items-center gap-2">
          <%= f.label :last_name, class: 'block font-medium text-gray-900 text-left capitalize' %>
        </div>
        <%= f.text_field :last_name, class: "bg-gray-50 border text-gray-900 border-gray-300 p-1.5 focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 rounded-md", required: true %>
      </div>

      <div>
        <div class="flex flex-col justify-center">
          <%= f.label :contact_no, class: 'block font-medium text-gray-900 text-left capitalize' %>
        </div>
        <%= f.text_field :contact_no, placeholder:'(09123456789)', class: "bg-gray-50 border text-gray-900 border-gray-300 p-1.5 focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 rounded-md", required: true %>
      </div>

      <div class="text-left flex flex-col justify-center mt-2">
        <div class="flex items-center gap-2">
          <%= f.label 'Gender:', class: 'font-medium text-gray-900 mr-2 w-24' %>
          <div class="flex place-items-center">
            <%= f.radio_button :gender, 'male', class: 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2', checked: true %>
            <%= f.label 'Male', class: 'ml-2 mr-4 text-gray-900 w-16' %>
            <%= f.radio_button :gender, 'female', class: 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2' %>
            <%= f.label 'Female', class: 'ml-2 text-gray-900' %>
          </div>
        </div>
      </div>

      <div class="text-left flex flex-col justify-center">
        <div class="flex items-center gap-2">
          <%= f.label 'Occupation:', class: 'font-medium text-gray-900 mr-2 w-24' %>
          <div class="flex place-items-center">
            <%= f.radio_button :occupation, 'student', class: 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2', checked: true %>
            <%= f.label 'Student', class: 'ml-2 mr-4 text-gray-900 w-16' %>
            <%= f.radio_button :occupation, 'reviewee', class: 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2' %>
            <%= f.label 'Reviewee', class: 'ml-2 text-gray-900' %>
          </div>
        </div>
      </div>

      <fieldset class="border border-gray-200 p-4 rounded-md my-2">
        <legend class="font-medium text-center -mb-3 text-blue-500">Preference</legend>
        <div class="text-left flex flex-col justify-center mb-2">
          <div class="flex items-center gap-2">
            <%= f.label 'Location', class: 'font-medium text-gray-900 mr-2' %>
          </div>
          <%= f.select(:location_preference,  ['Recto', 'Espana', 'Tacio', 'Vicente Cruz'], { include_blank: false }, { class: "border text-gray-900 border-gray-300 p-1.5 focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 capitalize rounded-md mt-1" }) %>
        </div>

        <div>
          <div class="flex items-center gap-2">
            <%= f.label 'Room', class: 'block font-medium' %>
          </div>
          <%= f.select(:room_type,  ['bedspace', 'studio', 'boarding house', 'condo fully-furnished', 'condo empty' ], { include_blank: false }, { class: "border text-gray-900 border-gray-300 p-1.5 focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 capitalize rounded-md mt-1" }) %>
        </div>
    
      </fieldset>

      <div>
        <div class="flex items-center gap-2">
          <%= f.label :move_in_date, class: 'block font-medium text-gray-900 text-left capitalize' %>
        </div>
        <%= f.date_field :move_in_date, class: "mt-1 bg-gray-50 border text-gray-900 border-gray-300 text-sm p-1.5 focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 uppercase rounded-md", required: true %>
      </div>

      <div class="mt-2">
        <%= f.submit 'Send Inquiry', class: 'block py-2.5 px-4 font-medium text-center text-white bg-blue-600 p-1.5 focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer w-full uppercase rounded-md transition-all' %>
      </div>
    </div>
  <% end %>
</div>