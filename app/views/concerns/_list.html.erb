<% if concerns.any? %>
  <div class="overflow-x-auto relative rounded-md">
    <table class="w-full text-sm text-left text-gray-500">
      <thead class="text-xs text-gray-800 uppercase bg-gray-200 lg:table-fixed">
        <tr>
          <th class="py-3 px-3 w-1/8">Concern</th>
          <th class="py-3 px-3 w-1/2">Description</th>
          <th class="py-3 px-3 w-1/8 text-center">Date Posted</th>
          <th class="py-3 px-3 w-1/8 text-center">Status</th> 
        </tr>
      </thead>
      <tbody>
        <% concerns.each do |concern| %>
          <tr class="bg-white border-b hover:bg-gray-100 text-gray-800">
            
            <td class="py-3 px-3"><%= link_to concern.title, concern_path(concern), class: 'font-medium text-blue-600 hover:underline' %></td>
            <td class="py-3 px-3"><%= truncate(concern.description, length: 30) %></td>
            <td class="py-3 px-3 text-center"><%= concern.created_at.strftime("%Y-%m-%d") %></td>
            <td class="py-3 px-3 text-center">
              <% if concern.open? %>
                <span class="text-white font-medium rounded-lg text-sm px-2 py-1 bg-blue-600"><%= concern.status.upcase %></span>
              <% else %>
                <span class="text-white font-medium rounded-lg text-sm px-2 py-1 bg-gray-400"><%= concern.status.upcase %></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div>
    <p class="italic text-sm">Empty</p>
  </div>
<% end %>