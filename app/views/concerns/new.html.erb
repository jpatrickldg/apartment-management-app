<h1 class="text-lg lg:text-xl font-bold mb-4">Create Ticket</h1>
<div class="max-w-sm">
  <%= form_with model: @concern, data: {turbo: false} do |f| %>
    <div class="flex flex-col gap-2 mb-4 justify-center">
      <% if @concern.errors.any? %>
        <div class="w-full p-2 rounded-lg mb-2 text-red-700 bg-red-300 font-medium">
          <% @concern.errors.full_messages.each do |error| %>
            <div><%= error %></div>
          <% end %>
        </div>
      <% end %>

      <div>
        <%= f.label :title, class: 'block font-medium mb-1' %>
        <%= f.text_field :title, class: 'w-full block border border-gray-200 rounded-lg' %>
      </div>

      <div>
        <%= f.label :description, class: 'block font-medium mb-1' %>
        <%= f.text_area :description, :rows => 4, class: 'w-full block border border-gray-200 rounded-lg' %>
      </div>
    </div>
    <div class="flex gap-2 items-center">
      <%= f.submit 'Create Ticket', class: 'block py-1.5 px-4 text-sm font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>
      <%= link_to 'Cancel', concerns_path, class: 'block py-1.5 px-4 text-sm font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>
    </div>
  <% end %>
</div>