<div>
  <h1 class="text-lg lg:text-xl font-bold">Create Ticket</h1>
</div>
<div class="flex-auto overflow-y-auto">
  <%= form_with model: @concern, data: {turbo: false} do |f| %>
    <div class="flex flex-col gap-2 mb-4 justify-center">
      <% invalid_title = @concern.errors.include?(:title) %>
      <div class="mb-2">
        <div class="flex items-center gap-2 mb-1">
          <%= f.label :title, class: 'block font-medium' %>
          <% if invalid_title %>
            <% @concern.errors.full_messages_for(:title).each do |msg| %>
              <div class="text-red-500 text-sm">
                (<%= msg %>)
              </div>
            <% end %>
          <% end %>
        </div>
        <%= f.text_field :title, autofocus: (true if invalid_title), class: "bg-gray-50 w-full block border rounded-lg #{ invalid_title ? 'border-red-400 border-2 focus:ring-red-400 focus:border-red-400' : 'border-gray-300 focus:ring-blue-500 focus:border-blue-500' }" %>
      </div>

      <% invalid_description = @concern.errors.include?(:description) %>
      <div class="mb-4">
        <div class="flex items-center gap-2 mb-1">
          <%= f.label 'Content', class: 'block font-medium' %>
          <% if invalid_description %>
            <% @concern.errors.full_messages_for(:description).each do |msg| %>
              <div class="text-red-500 text-sm">
                (<%= msg %>)
              </div>
            <% end %>
          <% end %>
        </div>
        <%= f.text_area :description, autofocus: (true if invalid_description), :rows => 4, class: "bg-gray-50 w-full block border rounded-lg #{ invalid_description ? 'border-red-400 border-2 focus:ring-red-400 focus:border-red-400' : 'border-gray-300 focus:ring-blue-500 focus:border-blue-500' }" %>
      </div>
    </div>
    <div class="flex gap-2 place-items-center">
      <%= f.submit 'Create Ticket', class: 'block w-full py-1.5 px-4 font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer w-fit' %>
      <%= link_to 'Cancel', concerns_path, class: 'block w-full py-1.5 px-4 font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer w-fit' %>
    </div>
  <% end %>
</div>