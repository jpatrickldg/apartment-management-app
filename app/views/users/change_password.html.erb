<div>
  <h1 class="text-lg lg:text-xl font-bold">Change Password</h1>
</div>

<div class="flex-auto overflow-y-auto max-w-md">
  <%= form_with model: @user, data: {turbo: false}, url: update_password_user_path, method: :patch do |f| %>
    <div class="flex flex-col gap-2 mb-4 justify-center">
      <% invalid_password = @user.errors.include?(:password) %>
      <div>
        <div class="flex items-center gap-2 mb-1">
          <%= f.label :password, "New password", class: 'block text-sm font-medium text-gray-900 text-left' %>
          <% if invalid_password %>
            <% @user.errors.full_messages_for(:password).each do |msg| %>
              <div class="text-red-500 text-sm">
                (<%= msg %>)
              </div>
            <% end %>
          <% end %>
        </div>
        <%= f.password_field :password, autofocus: (true if invalid_password), autocomplete: "new-password", class: "bg-gray-50 border text-gray-900 text-sm rounded-lg block w-full p-2.5 #{invalid_password ? 'border-red-400 border-2 focus:ring-red-400 focus:border-red-400' : 'border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
      </div>

      <% invalid_password_confirmation = @user.errors.include?(:password_confirmation) %>
      <div>
        <div class="flex flex-col justify-center mb-1">
          <%= f.label :password_confirmation, "Confirm new password", class: 'block text-sm font-medium text-gray-900 text-left' %>
          <% if invalid_password_confirmation %>
            <% @user.errors.full_messages_for(:password_confirmation).each do |msg| %>
              <div class="text-red-500 text-sm">
                (<%= msg %>)
              </div>
            <% end %>
          <% end %>
        </div>
        <%= f.password_field :password_confirmation, autofocus: (true if invalid_password_confirmation), autocomplete: "new-password", class: "bg-gray-50 border text-gray-900 text-sm rounded-lg block w-full p-2.5 #{invalid_password_confirmation ? 'border-red-400 border-2 focus:ring-red-400 focus:border-red-400' : 'border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
      </div>
    </div>

    <div class="flex gap-2 place-items-center">
      <%= f.submit 'Change Password', class: 'block py-1.5 px-4 font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>
      <%= link_to 'Cancel', profile_path, class: 'block py-1.5 px-4 font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>
    </div>
  <% end %>
</div>