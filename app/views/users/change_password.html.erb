<div>
  <h1 class="text-lg lg:text-xl font-bold">Change Password</h1>
</div>

<div class="flex-auto overflow-y-auto max-w-sm">
  <%= form_with model: @user, data: {turbo: false}, url: update_password_user_path, method: :patch do |f| %>
    <div class="flex flex-col gap-2 mb-4 justify-center">
      <% if @user.errors.any? %>
        <div class="w-full p-2 rounded-lg mb-2 text-red-700 bg-red-300 font-medium">
          <% @user.errors.full_messages.each do |error| %>
            <div><%= error %></div>
          <% end %>
        </div>
      <% end %>

      <div>
        <%= f.label :password, class: 'block font-medium mb-1' %>
        <%= f.password_field :password, class: 'w-full block border border-gray-200 rounded-lg' %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: 'block font-medium mb-1' %>
        <%= f.password_field :password_confirmation, class: 'w-full block border border-gray-200 rounded-lg' %>
      </div>
    </div>
    <div class="flex gap-2 place-items-center">
      <%= f.submit 'Change Password', class: 'block py-1.5 px-4 text-sm font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>
      <%= link_to 'Cancel', profile_path, class: 'block py-1.5 px-4 text-sm font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>
    </div>
  <% end %>
</div>


