<% if tenants.any? %>
  <div class="overflow-x-auto relative rounded-md">
    <table class="w-full text-sm text-left text-gray-500">
      <thead class="text-xs text-gray-800 uppercase bg-gray-200 lg:table-fixed">
        <tr>
          <th class="p-3">Email</th>
          <th class="p-3">First Name</th>
          <th class="p-3">Last Name</th>
          <th class="p-3">Gender</th>
          <th class="p-3">Occupation</th>
          <th class="p-3">Contact</th>
          <th class="p-3">Address</th>
          <th class="p-3 text-center">
            <span class="sr-only">Profile</span>
          </th>
        </tr>
      </thead>
      <tbody>
        <% tenants.each do |tenant| %>
          <tr class="bg-white border-b hover:bg-gray-100 text-gray-800">
            <td class="p-3 font-bold"><%= tenant.email %></td>
            <td class="p-3"><%= tenant.first_name.capitalize %></td>
            <td class="p-3"><%= tenant.last_name.capitalize %></td>
            <td class="p-3"><%= tenant.gender.capitalize %></td>
            <td class="p-3"><%= tenant.occupation.capitalize %></td>
            <td class="p-3"><%= tenant.contact_no %></td>
            <td class="p-3"><%= tenant.address.capitalize %></td>
            <td class="p-3 text-center"><%= link_to 'Profile', tenant_path(tenant), class: 'font-medium text-blue-600 hover:underline' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div>
    <p class="italic text-sm">Empty</p>
  </div>
<% end %>