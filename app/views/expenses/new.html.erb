<div>
  <h2 class="text-lg lg:text-xl font-bold">New Expense</h2>
</div>
<div class="flex-auto overflow-y-auto">
  <%= form_with model: @expense, data: {turbo: false} do |f| %>
    <div>
      <% invalid_title = @expense.errors.include?(:title) %>
      <div class="mb-2">
        <div class="mb-2">
        <div class="flex items-center gap-2 mb-1">
          <%= f.label :title, class: 'block font-medium' %>
          <% if invalid_title %>
            <% @expense.errors.full_messages_for(:title).each do |msg| %>
              <div class="text-red-500 text-sm">
                (<%= msg %>)
              </div>
            <% end %>
          <% end %>
        </div>
        <%= f.text_field :title, autofocus: (true if invalid_title), class: "bg-gray-50 w-full block border rounded-lg #{invalid_title ? 'border-red-400 border-2 focus:ring-red-400 focus:border-red-400' : 'border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
      </div>

      <% invalid_description = @expense.errors.include?(:description) %>
      <div class="mb-2">
        <div class="flex items-center gap-2 mb-1">
          <%= f.label 'Content', class: 'block font-medium' %>
          <% if invalid_description %>
            <% @expense.errors.full_messages_for(:description).each do |msg| %>
              <div class="text-red-500 text-sm">
                (<%= msg %>)
              </div>
            <% end %>
          <% end %>
        </div>
        <%= f.text_area :description, autofocus: (true if invalid_description), :rows => 4, class: "bg-gray-50 w-full block border rounded-lg #{invalid_description ? 'border-red-400 border-2 focus:ring-red-400 focus:border-red-400' : 'border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
      </div>

      <% invalid_amount = @expense.errors.include?(:amount) %>
      <div class="mb-2">
        <div class="flex items-center gap-2 mb-1">
          <%= f.label :amount, class: 'block font-medium' %>
          <% if invalid_amount %>
            <% @expense.errors.full_messages_for(:amount).each do |msg| %>
              <div class="text-red-500 text-sm">
                (<%= msg %>)
              </div>
            <% end %>
          <% end %>
        </div>
        <%= f.number_field :amount, step: 0.01, class: 'w-full block border border-gray-200 rounded-lg' %>
      </div>

      <div class="mb-4">
        <%= f.label 'Proof', class: 'block mb-1 font-medium text-gray-900' %>
        <%= f.file_field :proof, class: 'block w-full text-gray-900 rounded-lg border border-gray-300 cursor-pointer focus:outline-none file:bg-gray-200 file:rounded-lg file:hover:cursor-pointer file:hover:bg-gray-300 file:border-none file:p-2 file:rounded-r-none file:px-4', required: true %>
      </div>

      <div class="flex gap-2 place-items-center">
        <%= f.submit 'Add Expense', class: 'block py-1.5 px-4 font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>
        <%= link_to 'Cancel', expenses_path, class: 'block py-1.5 px-4 font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>
      </div>
    </div>
  <% end %>
</div>
