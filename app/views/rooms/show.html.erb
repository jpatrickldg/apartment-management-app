<div class="mb-4">
  <div class="mb-4">
    <h1 class="text-lg lg:text-xl font-bold mb-2">Room <%= @room.room_code.upcase %></h1>
    <div class="border border-gray-200 px-3 py-4 rounded-lg">
      <div class="flex gap-2 place-items-center mb-2">
        <p><strong>Branch: </strong></p>
        <p><%= Branch.find(@room.branch_id).address %> (<%= Branch.find(@room.branch_id).branch_type %>)</p>
      </div>
      <div class="flex gap-2 place-items-center mb-2">
        <p><strong>Monthly Rate: </strong></p>
        <p><%= @room.monthly_rate %></p>
      </div>
      <div class="flex gap-2 place-items-center mb-2">
        <p><strong>Current Number of Occupants: </strong></p>
        <p><%= @room.occupants_count %></p>
      </div>
      <div class="flex gap-2 place-items-center mb-2">
        <p><strong>Room Capacity: </strong></p>
        <p><%= @room.capacity_count %></p>
      </div>
      <div class="flex gap-2 place-items-center mb-2">
        <p><strong>Available Space: </strong></p>
        <p><%= @room.available_count %></p>
      </div>
    </div>
  </div>

  <div class="mb-4">
    <h1 class="text-lg lg:text-xl font-bold mb-2">Active Tenants</h1>
    <%= render 'list', tenants: @active %>
  </div>

  <div class="mb-4">
    <h1 class="text-lg lg:text-xl font-bold mb-2">Previous Tenants</h1>
    <%= render 'list', tenants: @inactive %>
  </div>

</div>

<%= link_to 'Back', branches_path, class: 'block w-fit py-1.5 px-4 text-sm font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>