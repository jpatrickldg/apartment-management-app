<div>
  <h1 class="text-xl lg:text-2xl font-bold mb-2">Room <%= @room.room_code.upcase %></h1>
  <div class="flex flex-col justify-center md:flex-row md:gap-2 md:place-items-center md:justify-start mb-2">
    <p class="w-40"><strong>Branch: </strong></p>
    <p><%= Branch.find(@room.branch_id).address %> (<%= Branch.find(@room.branch_id).branch_type %>)</p>
  </div>
  <div class="flex gap-2 place-items-center mb-2">
    <p class="w-40"><strong>Monthly Rate: </strong></p>
    <p><%= number_to_currency(@room.monthly_rate, unit: 'â‚±') %></p>
  </div>
  <div class="flex gap-2 place-items-center mb-2">
    <p class="w-40"><strong>Occupants: </strong></p>
    <p><%= @room.occupants_count %></p>
  </div>
  <div class="flex gap-2 place-items-center mb-2">
    <p class="w-40"><strong>Room Capacity: </strong></p>
    <p><%= @room.capacity_count %></p>
  </div>
  <div class="flex gap-2 place-items-center mb-2">
    <p class="w-40"><strong>Available Space: </strong></p>
    <p><%= @room.available_count %></p>
  </div>
</div>

<div class="flex-auto overflow-y-auto">
  <div class="mb-4">
    <h1 class="text-lg lg:text-xl font-bold mb-1">Active Tenants</h1>
    <%= render 'list', tenants: @active %>
  </div>

  <div>
    <h1 class="text-lg lg:text-xl font-bold mb-1">Previous Tenants</h1>
    <%= render 'list', tenants: @inactive %>
  </div>
</div>

<div>
  <%= link_to 'Back', branches_path, class: 'block w-fit py-1.5 px-4 text-sm font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>
</div>
