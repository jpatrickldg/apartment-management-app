<div class="w-full flex place-items-center justify-center">
  <div class="w-96">
    <div class="w-full text-center p-5"><h2 class="font-medium text-lg">Log in</h2>
      <div class="w-full">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-2">
            <%= f.label :email, class: 'block mb-1 text-sm font-medium text-gray-900 text-left' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' %>
          </div>

          <div class="mb-2">
            <%= f.label :password, class: 'block mb-1 text-sm font-medium text-gray-900 text-left' %>
            <%= f.password_field :password, autocomplete: "current-password", class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' %>
          </div class="mb-2">

          <% if devise_mapping.rememberable? %>
            <div class="mb-2 flex justify-between place-items-center">
              <div>
                <%= f.check_box :remember_me, class: 'w-4 h-4 bg-gray-50 rounded border border-gray-300 focus:ring-3 focus:ring-blue-300' %>
                <%= f.label :remember_me, class: 'ml-2 text-sm font-medium text-gray-900' %>
              </div>
              <div>
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'font-medium text-blue-500 hover:underline text-sm' %>
              </div>
            </div>
          <% end %>

          <div class="mb-2">
            <%= f.submit "Log in", class: 'w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full px-5 py-2.5 text-center' %>
          </div>
        <% end %>
        <div class="text-left">
          <span class="text-sm font-medium text-gray-900 t">Don't have an account yet? </span><%= link_to "Register", new_registration_path(resource_name), class: 'font-medium text-blue-500 hover:underline text-sm' %>
        </div>
        <div class="text-left">
          <span class="text-sm font-medium text-gray-900 t">Didn't receive confirmation instructions? </span><%= link_to "Click here", new_confirmation_path(resource_name), class: 'font-medium text-blue-500 hover:underline text-sm' %>
        </div>
        <div class="text-left">
          <span class="text-sm font-medium text-gray-900 t">Didn't receive unlock instructions? </span><%= link_to "Click here", new_unlock_path(resource_name), class: 'font-medium text-blue-500 hover:underline text-sm' %>
        </div>
      </div>
    </div>
  </div>
</div>

