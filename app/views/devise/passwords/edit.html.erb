<h2 class="font-medium text-lg text-center mb-2">Change your password</h2>

<div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%#= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <% invalid_password = resource.errors.include?(:password) %>
    <div class="mb-2">
      <div class="flex items-center gap-2 mb-1">
        <%= f.label :password, "New password", class: 'block text-sm font-medium text-gray-900 text-left' %>
        <% if invalid_password %>
          <% resource.errors.full_messages_for(:password).each do |msg| %>
            <div class="text-red-500 text-sm">
              (<%= msg %>)
            </div>
          <% end %>
        <% end %>
      </div>
      <%= f.password_field :password, autofocus: (true if invalid_password), autocomplete: "new-password", class: "bg-gray-50 border text-gray-900 text-sm rounded-lg block w-full p-2.5 #{invalid_password ? 'border-red-400 border-2 focus:ring-red-400 focus:border-red-400' : 'border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
    </div>

    <% invalid_password_confirmation = resource.errors.include?(:password_confirmation) %>
    <div class="mb-2">
      <div class="flex flex-col justify-center mb-1">
        <%= f.label :password_confirmation, "Confirm new password", class: 'block text-sm font-medium text-gray-900 text-left' %>
        <% if invalid_password_confirmation %>
          <% resource.errors.full_messages_for(:password_confirmation).each do |msg| %>
            <div class="text-red-500 text-sm">
              (<%= msg %>)
            </div>
          <% end %>
        <% end %>
      </div>
      <%= f.password_field :password_confirmation, autofocus: (true if invalid_password_confirmation), autocomplete: "new-password", class: "bg-gray-50 border text-gray-900 text-sm rounded-lg block w-full p-2.5 #{invalid_password_confirmation ? 'border-red-400 border-2 focus:ring-red-400 focus:border-red-400' : 'border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
    </div>

    <div class="mb-2 mt-3">
      <%= f.submit "Change my password", class: 'w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg w-full px-5 py-2.5 text-center hover:cursor-pointer' %>
    </div>
  <% end %>
  <%= render 'devise/shared/login_register_links' %>
</div>