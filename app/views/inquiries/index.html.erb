<div class="mb-4">
  <h1 class="text-xl lg:text-2xl font-bold mb-2">Inquiries</h1>
  <% if current_user.receptionist? %>

    <div class="mb-4">
      <h2 class="text-lg lg:text-xl font-bold mb-2">Open Inquiries</h2>
      <%= render 'list', inquiries: @open %>
    </div>

    <div class="mb-4">
      <h2 class="text-lg lg:text-xl font-bold mb-2">Inquiries you are Assisting</h2>
      <%= render 'list', inquiries: @on_going %>
    </div>

    <div class="mb-4">
      <h2 class="text-lg lg:text-xl font-bold mb-2">Inquiries you Assisted</h2>
      <%= render 'list', inquiries: @close %>
    </div>

  <% elsif current_user.admin? || current_user.owner? %>
    <div class="mb-4">
      <%= search_form_for @q do |f| %>
        <div class="relative">
          <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
            <i class="fa-solid fa-magnifying-glass w-5 h-5"></i>
          </div>
          <%= f.search_field :processed_by_cont, placeholder: 'Search Inquiry', class: 'block p-4 pl-10 w-full text-sm text-gray-900 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500' %>
          <%= f.submit 'Search', class: 'text-white absolute right-20 bottom-2.5 bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 hover:cursor-pointer'  %>
          <%= link_to 'Clear', inquiries_path, class: 'text-white absolute right-2.5 bottom-2.5 bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2' %>
        </div>
      <% end %>
    </div>
    <%= render 'list', inquiries: @inquiries %>
  <% end %>
</div>


<%= link_to 'Back', authenticated_root_path, class: 'block w-fit py-1.5 px-4 text-sm font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>