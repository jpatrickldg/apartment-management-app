<div>
  <h1 class="text-xl lg:text-2xl font-bold">Inquiry ID: <%= @inquiry.id %></h1>
</div>

<div class="flex-auto overflow-y-auto">
  <h2 class="lg:text-lg font-medium mb-2">Did the enquirer signed a contract?</h2>

  <%= form_with model: @inquiry, data:{turbo:false}, url: inquiry_path(@inquiry), method: :patch do |f| %>
    <% if @inquiry.errors.any? %>
      <div class="w-full p-2 rounded-lg mb-2 text-red-700 bg-red-300 font-medium text-sm">
        <% @inquiry.errors.full_messages.each do |error| %>
          <div><%= error %></div>
        <% end %>
      </div>
    <% end %>

    <div>
      <%= f.hidden_field :status, value: 'closed' %>
    </div>

    <div class="mb-8 text-left flex place-items-center gap-4">
      <div>
        <%= f.radio_button :contract_signed, true, class: 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2' %>
        <%= f.label 'Yes', class: 'ml-1 font-medium text-gray-900' %>
      </div>
      <div>
        <%= f.radio_button :contract_signed, false, class: 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2' %>
        <%= f.label 'No', class: 'ml-1 font-medium text-gray-900' %>
      </div>
    </div>

    <div class="flex gap-2 items-center">
      <%= f.submit 'Close Ticket', class: 'block w-fit py-1.5 px-4 font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>
      <%= link_to 'Cancel', inquiry_path(@inquiry), class: 'block w-fit py-1.5 px-4 font-medium text-center text-white bg-blue-600 rounded-lg focus:ring-4 focus:ring-blue-200 hover:bg-blue-700 hover:cursor-pointer' %>
    </div>
  <% end %>
</div>